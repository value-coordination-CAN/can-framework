+"""
+Generate WP-005 figures for the MkDocs site.
+
+Outputs:
+  docs/assets/wp-005-figure1-graph-model.png
+  docs/assets/wp-005-figure2-hybrid-bridge.png
+
+Usage:
+  python tools/generate_wp005_figures.py
+"""
+
+from pathlib import Path
+
+import matplotlib.pyplot as plt
+
+
+ROOT = Path(__file__).resolve().parents[1]
+OUT_DIR = ROOT / "docs" / "assets"
+OUT_DIR.mkdir(parents=True, exist_ok=True)
+
+
+def fig1_graph_model(out_path: Path) -> None:
+    plt.figure()
+
+    positions = {
+        "A\nCreator": (0, 1),
+        "B\nInfrastructure": (1, 2),
+        "Z\nUser": (2, 1),
+        "Y\nAdvertiser": (3, 2),
+        "Network\nGraph Settlement": (2, 3),
+    }
+
+    for node, (x, y) in positions.items():
+        plt.scatter(x, y)
+        plt.text(x, y + 0.1, node, ha="center")
+
+    edges = [
+        ("A\nCreator", "Z\nUser"),
+        ("Z\nUser", "Y\nAdvertiser"),
+        ("Y\nAdvertiser", "B\nInfrastructure"),
+        ("B\nInfrastructure", "A\nCreator"),
+        ("A\nCreator", "Network\nGraph Settlement"),
+        ("Z\nUser", "Network\nGraph Settlement"),
+        ("Y\nAdvertiser", "Network\nGraph Settlement"),
+        ("B\nInfrastructure", "Network\nGraph Settlement"),
+    ]
+
+    for start, end in edges:
+        plt.plot(
+            [positions[start][0], positions[end][0]],
+            [positions[start][1], positions[end][1]],
+        )
+
+    plt.title("Figure 1: Six-Degree Graph Settlement Model")
+    plt.xticks([])
+    plt.yticks([])
+    plt.savefig(out_path, bbox_inches="tight", dpi=200)
+    plt.close()
+
+
+def fig2_hybrid_bridge(out_path: Path) -> None:
+    plt.figure()
+
+    positions = {
+        "Monetary\nSettlement Layer": (1, 3),
+        "Hybrid\nInterface": (1, 2),
+        "Graph-Based\nNMCS Layer": (1, 1),
+        "Direct Value\nHandling": (1, 0),
+    }
+
+    for node, (x, y) in positions.items():
+        plt.scatter(x, y)
+        plt.text(x, y + 0.1, node, ha="center")
+
+    edges = [
+        ("Monetary\nSettlement Layer", "Hybrid\nInterface"),
+        ("Hybrid\nInterface", "Graph-Based\nNMCS Layer"),
+        ("Graph-Based\nNMCS Layer", "Direct Value\nHandling"),
+    ]
+
+    for start, end in edges:
+        plt.plot(
+            [positions[start][0], positions[end][0]],
+            [positions[start][1], positions[end][1]],
+        )
+
+    plt.title("Figure 2: Hybrid Transition Bridge")
+    plt.xticks([])
+    plt.yticks([])
+    plt.savefig(out_path, bbox_inches="tight", dpi=200)
+    plt.close()
+
+
+def main() -> None:
+    fig1_graph_model(OUT_DIR / "wp-005-figure1-graph-model.png")
+    fig2_hybrid_bridge(OUT_DIR / "wp-005-figure2-hybrid-bridge.png")
+    print("Generated WP-005 figures in docs/assets/")
+
+
+if __name__ == "__main__":
+    main()